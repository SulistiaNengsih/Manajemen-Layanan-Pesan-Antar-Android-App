<!-- item_order.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:outlineAmbientShadowColor="@color/dark_grey"
    android:background="@drawable/rounded_corner_card">

    <TextView
        android:id="@+id/orderNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pesanan {order_number}"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderItemsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/orderNumberTextView"
        app:layout_constraintBottom_toBottomOf="@+id/customerNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="0dp" />

    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alya Septiani"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/orderItemsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/orderItemsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/customerNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total pembayaran: 38000"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/addressTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner_button"
        app:layout_constraintTop_toBottomOf="@+id/addressTextView"
        app:layout_constraintStart_toEndOf="@+id/totalTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
