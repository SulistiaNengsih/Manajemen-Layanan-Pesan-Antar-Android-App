<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productPriceAndName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="(1x) Gas Elpiji"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/productTotalPrice" />

    <TextView
        android:id="@+id/productTotalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp 18.000"
        android:textSize="14sp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/productPriceAndName"/>
</androidx.constraintlayout.widget.ConstraintLayout>
